# ==========================================
# 資料庫設定
# ==========================================
DB_HOST=localhost
DB_PORT=15432
DB_NAME=financial_data
DB_USER=postgres
DB_PASSWORD=your_password_here

# ==========================================
# API 金鑰設定
# ==========================================

# Alpha Vantage API (金融新聞、股票資料)
# 申請網址: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# FRED API (美國聯準會經濟資料)
# 申請網址: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# Gold API (黃金價格)
# 申請網址: https://www.goldapi.io/
GOLD_API_KEY=your_gold_api_key_here

# ExchangeRate API (匯率資料)
# 申請網址: https://www.exchangerate-api.com/
EXCHANGE_RATE_API_KEY=your_exchange_rate_key_here

# Tiingo API (美股資料，備選)
# 申請網址: https://www.tiingo.com/
TIINGO_API_KEY=your_tiingo_key_here

# Marketaux API (新聞資料，備選)
# 申請網址: https://www.marketaux.com/
MARKETAUX_API_KEY=your_marketaux_key_here

# Finnhub API (股票、新聞、財報資料)
# 申請網址: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_key_here

# Financial Modeling Prep API (財報、股票資料)
# 申請網址: https://financialmodelingprep.com/developer/docs/
FMP_API_KEY=your_fmp_key_here

# Gemini API (AI 分析)
# 申請網址: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# ==========================================
# 系統設定
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/financial_db.log

# ==========================================
# 資料回溯設定
# ==========================================
BACKFILL_BATCH_SIZE=500
BACKFILL_PARALLEL_WORKERS=3

# 資料回溯起始日期
TW_STOCK_START_DATE=1990-01-01
US_STOCK_START_DATE=1970-01-01
GOLD_START_DATE=1968-01-01
EXCHANGE_RATE_START_DATE=1990-01-01
MACRO_START_DATE=1960-01-01
NEWS_START_DATE=2023-01-01

# ==========================================
# 計算排程設定
# ==========================================
TECH_INDICATORS_SCHEDULE_HOUR=17
TECH_INDICATORS_SCHEDULE_MINUTE=30
QUANT_FACTORS_SCHEDULE_HOUR=18
QUANT_FACTORS_SCHEDULE_MINUTE=0

# ==========================================
# AI 設定
# ==========================================
AI_REPORT_CACHE_DAYS=7
